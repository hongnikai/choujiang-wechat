/**index.wxss**/
.index-top{
  width:100%;
  height:84rpx;
  background-color: #fff;
  padding:14rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}
.index-top-name{
  width:100rpx;
  height:56rpx;
  line-height:56rpx;
  font-size: 28rpx;
}
.index-top-search{
  width:380rpx;
  height:56rpx;
  flex:1;
  border: 1px solid #aaa;
  border-radius: 25rpx;
  background-color: #f1f1f1;
  padding-left: 140rpx;
  box-sizing: border-box;
}
.index-top-search-image,.index-top-search-input{
  float:left;
}
.index-top-search-image{
  width:25rpx;
  height:25rpx;
