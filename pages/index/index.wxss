}
.index-top-warn{
  width:64rpx;
  height:25rpx;
  float:right;
}
.index-top-warn image{
  width:40rpx;
  height:40rpx;
  float:right;
  margin-top: 8rpx;
}
.index-swiper{
  width:100%;
  height:300rpx;
}
.index-swiper swiper{
  width:100%;
  height:300rpx;
}
.slide-image{
