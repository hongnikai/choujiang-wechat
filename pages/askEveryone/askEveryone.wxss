page {
  -webkit-user-select:none;
  user-select:none;
  width:100%;
  overflow-x:hidden;
  height:100%;
  background-color:#f2f2f2;
}
.askEveryone{
  width:100%;
}
.askEveryone-no{
  width:100%;
  height:100rpx;
  background-color: #fff;
  border-bottom:1rpx solid #eee;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.askEveryone-no text{
  display: block;
  float: left;
  line-height:100rpx;
  font-size: 30rpx;
}
.askEveryone-no text:nth-child(2){
  max-width: 70%;
  text-overflow: ellipsis;
  overflow:hidden;
  white-space: nowrap;
}
.askEveryone-yes{
  width:100%;
  background-color: #fff;
}
.askEveryone-yes1{
  width:100%;
  height:240rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.askEveryone-yes1-ask{
  width:100%;
  height:70rpx;
  display: flex;
  flex-direction: row;
}
.askEveryone-yes1-ask image{
  width:30rpx;
  height:30rpx;
  margin-top: 20rpx;
}
.askEveryone-yes1-ask view{
  flex:1;
  font-size: 30rpx;
  line-height:70rpx;
  padding-left:10rpx;
  box-sizing: border-box;
  font-weight: bold;
}
.askEveryone-yes1-ask view text{
  display: block;
  max-width:90%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.askEveryone-yes1-answer{
  width:100%;
  height:70rpx;
  display: flex;
  flex-direction: row;
}
.askEveryone-yes1-answer image{
  width:30rpx;
  height:30rpx;
  margin-top: 20rpx;
}
.askEveryone-yes1-answer view{
  flex:1;
  font-size: 30rpx;
  line-height:70rpx;
  padding-left:10rpx;
  box-sizing: border-box;
}
.askEveryone-yes1-answer view text{
  display: block;
  max-width:90%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.askEveryone-yes1-bottom{
  width:100%;
  height:70rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  margin-top:20rpx;
}
.askEveryone-yes1-bottom view{
  width:50%;
  height:70rpx;
  float: left;
  line-height:70rpx;
  color:#999;
  font-size: 25rpx;
}
.askEveryone-yes1-bottom-right{
  text-align:right;
}
.askEveryone-bottom{
  width:100%;
  height:120rpx;
  border-top: 1rpx solid #eee;
  padding: 0 25rpx;
  box-sizing: border-box;
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.askEveryone-bottom-left{
  flex:1;
  height:120rpx;
}
.askEveryone-bottom-left input{
  width:100%;
  height:100%;
  font-size: 30rpx;
}
.askEveryone-bottom-right{
  width:130rpx;
  height:60rpx;
  background-color: #2abbb4;
  color:#fff;
  font-size:30rpx;
  text-align: center;
  line-height:60rpx;
  border-radius: 30rpx;
  margin-top:30rpx;
}