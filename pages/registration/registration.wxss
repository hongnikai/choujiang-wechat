.registration{
  width:100%;
}
.registration-text{
  width:56%;
  height:450rpx;
  margin: 0 auto;
  margin-top: 220rpx;
}
.registration-text1{
  width:100%;
  height:90rpx;
  border-bottom:1px solid #ccc;
  padding: 15rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.registration-text1 image{
  width:50rpx;
  height:50rpx;
}
.registration-text1 input{
  flex: 1;
  font-size: 30rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.registration-text2{
  width:100%;
  font-size: 30rpx;
  color:#999;
  text-align: center;
}
.registration-btn{
  width:92%;
  height:100rpx;
  background-color: #2abbb4;
  font-size: 35rpx;
  color:#fff;
  line-height:100rpx;
  text-align: center;
  border-radius: 50rpx;
  position: fixed;
  bottom:50rpx;
  left: 0;
  right:0;
  margin: auto;
}