<view class='maintain'>
  <!-- 空调品牌 -->
  <view class='maintain-brand'>
    <view class='maintain-brand-top'>空调品牌</view>
    <view class='maintain-brand-text'>
      <block wx:for="{{brandTypeList}}" wx:key="id" wx:for-index="i">
        <view class="{{brandTypeItem==item.id?'maintain-brand-text-view-click':'maintain-brand-text-view'}}" data-id="{{item.id}}" bindtap="brandTypeSelection">{{item.brandType}}</view>
      </block>
    </view>
  </view>
  <!-- 空调用途 -->
  <view class='maintain-use'>
    <view class='maintain-use-top'>空调用途</view>
    <view class='maintain-use-text'>
      <block wx:for="{{useTypeList}}" wx:key="id" wx:for-index="i">
        <view class="{{useTypeItem==item.id?'maintain-use-text-view-click':'maintain-use-text-view'}}" data-id="{{item.id}}" bindtap="useTypeSelection">{{item.useType}}</view>
      </block>
    </view>
  </view>
  <!-- 空调类型 -->
  <view class='maintain-Ctype'>
    <view class='maintain-Ctype-top'>空调类型</view>
    <view class='maintain-Ctype-text'>
      <block wx:for="{{CTypeList}}" wx:key="id" wx:for-index="i">
        <view class="{{CTypeItem==item.id?'maintain-Ctype-text-view-click':'maintain-Ctype-text-view'}}" data-id="{{item.id}}" bindtap="CTypeSelection">{{item.CType}}</view>
      </block>
    </view>
  </view>
  <!-- 匹数 -->
  <view class='maintain-Ptype'>
    <view class='maintain-Ptype-top'>匹数</view>
    <view class='maintain-Ptype-text'>
      <block wx:for="{{PTypeList}}" wx:key="id" wx:for-index="i">
        <view class="{{PTypeItem==item.id?'maintain-Ptype-text-view-click':'maintain-Ptype-text-view'}}" data-id="{{item.id}}" bindtap="PTypeSelection">{{item.PType}}</view>
      </block>
    </view>
  </view>
  <!-- 问题故障说明 -->
  <view class='maintain-answer'>
    <view class='maintain-answer-top'>问题故障说明</view>
    <view class='maintain-answer-text'>
      <textarea>问题故障说明</textarea>
    </view>
  </view>
  <!-- 下一步 -->
   <view class='maintain-next'>下一步</view> 
</view>

