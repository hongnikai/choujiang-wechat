.maintain{
  width:100%;
  padding: 40rpx 20rpx 0 20rpx;
  box-sizing: border-box;
}
.maintain-brand{
  width:100%;
  margin-top: 20rpx;
}
.maintain-brand-text{
  width:100%;
  height:100rpx;
  padding: 0 50rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.maintain-brand-text view{
  min-width:18%;
  height:50rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  float:left;
  font-size: 28rpx;
  line-height:50rpx;
  text-align: center;
  margin-right: 5%;
  border-radius: 15rpx;
}
.maintain-brand-top,.maintain-use-top,.maintain-Ctype-top,.maintain-Ptype-top,.maintain-answer-top{
  font-size: 28rpx;
}
.maintain-brand-text-view{
   border:1px solid #ccc;
   color:#333;
}
.maintain-brand-text-view-click{
   background-color: #2abbb4;
   color:#fff;
}
.maintain-use{
  width:100%;
  margin-top: 20rpx;
}
.maintain-use-text{
  width:100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.maintain-use-text view{
  width:44%;
  height:50rpx;
  display: inline-block;
  font-size: 28rpx;
  line-height:50rpx;
  text-align: center;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}
.maintain-use-text view:nth-child(2n+2){
  float:right;
}
.maintain-use-text-view-click{
  background-color: #2abbb4;
  color:#fff;
}
.maintain-use-text-view{
  border:1px solid #ccc;
  color:#333;
}
.maintain-Ctype{
  width:100%;
  margin-top:20rpx;
}
.maintain-Ctype-text{
  width:100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.maintain-Ctype-text view{
  width:120rpx;
  height:50rpx;
  display: inline-block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height:50rpx;
  text-align: center;
  border-radius: 15rpx;
}
.maintain-Ctype-text view:nth-child(3n-1){
  margin-left:18%;
  margin-right:18%;
}
.maintain-Ctype-text-view{
  border:1px solid #ccc;
  color:#333;
}
.maintain-Ctype-text-view-click{
  background-color: #2abbb4;
  color:#fff;
}
.maintain-Ptype{
  width:100%;
  margin-top:20rpx;
}
.maintain-Ptype-text{
  width:100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.maintain-Ptype-text view{
  min-width:16%;
  height:50rpx;
  display: inline-block;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height:50rpx;
  text-align: center;
  border-radius: 15rpx;
  margin-right: 3%;
}
.maintain-Ptype-text-view-click{
  background-color: #2abbb4;
  color:#fff;
}
.maintain-Ptype-text-view{
  background-color:#e5e5e5;
  color:#333;
}
.maintain-answer{
  width:100%;
  margin-top:20rpx;
}
.maintain-answer-text{
  width:100%;
  height:200rpx;
  margin-top: 20rpx;
  border:1px solid #ccc;
}
.maintain-answer-text textarea{
  border: 0;
  width:100%;
  height:100%;
  outline: none;
  resize: none;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.maintain-next{
  width:92%;
  height:100rpx;
  background-color: #2abbb4;
  color:#fff;
  text-align: center;
  line-height:100rpx;
  font-size:34rpx;
  border-radius:40rpx;
  margin: 0 auto;
  margin-top: 120rpx;
  margin-bottom: 40rpx;
}